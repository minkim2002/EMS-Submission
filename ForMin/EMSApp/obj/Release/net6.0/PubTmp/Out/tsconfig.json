{
  "compilerOptions": {
    "outDir": "./wwwroot/dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "lib": [ "es5", "es6", "DOM" ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/bin",
    "**/bower_components",
    "**/jspm_packages",
    "**/node_modules",
    "**/obj",
    "**/platforms",
    "node_modules"
  ]
}